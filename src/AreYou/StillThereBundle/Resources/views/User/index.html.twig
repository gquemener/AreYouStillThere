{% extends '::base.html.twig' %}


{% block body %}
<div class="container">

    <table class="table table-bordered table-striped">
        <thead>
            <th>Username</th>
            <th>Time left</th>
            <th>&nbsp;</th>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>
                    {% if user.lastheartbeat %}
                    <span data-lastheartbeat="{{ user.lastHeartBeat.date.timestamp }}" data-timeout="{{ user.noHeartbeatTimeLimit }}" class="timeleft">--d --:--:--</span>
                    {% endif %}
                </td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('show_user', {'username': user.username}) }}" class="btn">
                            <i class="icon-user"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
